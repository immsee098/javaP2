package com.day7;

public class WhileTest2 {

	public static void main(String[] args) {
		/*
		 while문도 for처럼 사용 가능
		 
		 조건식
		 while(조건식) {
		 	반복할 내용
		 	
		 	증감식
		 }
		 */
		
		for(int i=0; i<3; i++) {
			System.out.println("i="+i);
		}
		System.out.println("\nwhile문 이용");
		
		int k = 0;
		while(k<3) {
			System.out.println("k="+k);
			k++;
		}

	}

}
