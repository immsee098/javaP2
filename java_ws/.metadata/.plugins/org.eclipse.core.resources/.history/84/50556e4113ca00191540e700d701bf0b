package com.day8;

import java.util.Scanner;

public class MethodPrac2_3_25 {

	public static int numCalc(int a, int b) {
		while(true) {
			System.out.println("정수를 입력하세요");
			int result = 0;
			if(a>=b) {
				result = a%b;
			} else {
				result = b%a;
			}
			return result;
		}
	}
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

	}

}
