package com.day8;

public class MethodPrac2_3_25 {

	public static int numCalc(int a, int b) {
		while(true) {
			System.out.println("정수를 입력하세요");
			int result = 0;
			if(a==0 || b==0) {
				break;
			} else if(a>=b) {
				result = a%b;
			} else (a<b) {
				result = b%a;
			}
			return result;
		}
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
